{
    "compilerOptions": {
      "target": "es2022",
      "module": "CommonJS",
      "rootDir": "",
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true, 
      "emitDecoratorMetadata": true, 
      "skipLibCheck": true,
      "baseUrl": "",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src", "tests", "src/Entities"]
}